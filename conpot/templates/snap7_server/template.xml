            <key name="s7_firmware_identification">
                <value type="value">""</value>
            </key>
            <key name="s7_module_version">
                <value type="value">"1.1"</value>
            </key>
            <key name="s7_hardware_version">
                <value type="value">"1.7"</value>
            </key>
            <key name="s7_firmware_version">
                <value type="value">"4.1.3"</value>
            </key>
        </key_value_mappings>
    </databus>
</core>
