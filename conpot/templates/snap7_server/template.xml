<core>
    <template>
        <!-- General information about the template -->
        <entity name="unit">S7-300</entity>
        <entity name="vendor">Siemens</entity>
        <entity name="description">Simulation of Siemens S7-300 CPU</entity>
        <entity name="protocols">Snap7</entity>
        <entity name="creator">the fkie team</entity>
    </template>
    <databus>
        <!-- Core value that can be retrieved from the databus by key -->
        <key_value_mappings>
            <key name="FacilityName">
                <value type="value">"Some facility"</value>
            </key>
            <key name="SystemName">
                <value type="value">"Some system"</value>
            </key>
            <key name="SystemDescription">
                <value type="value">"Some PLC"</value>
            </key>
            <key name="Uptime">
                <value type="function">conpot.emulators.misc.uptime.Uptime</value>
            </key>
            <key name="sysObjectID">
                <value type="value">"1.3"</value>
            </key>
            <key name="sysContact">
                <value type="value">"Someone"</value>
            </key>
            <key name="sysName">
                <value type="value">"Some CP"</value>
            </key>
            <key name="sysLocation">
                <value type="value">"Somewhere"</value>
            </key>
            <key name="sysServices">
                <value type="value">"72"</value>
            </key>
            <key name="Copyright">
                <value type="value">"Someone"</value>
            </key>
            <key name="s7_id">
                <value type="value">"123456789"</value>
            </key>
            <key name="s7_module_type">
                <value type="value">"Some CPU"</value>
            </key>
            <key name="s7comm_db1">
                <value type="function" param="('cell1', 'cell2')">conpot.emulators.list.List</value>
            </key>
            <key name="empty">
                <value type="value">""</value>
            </key>
            <key name="s7_module_identification">
                <value type="value">"123 123-12345-1234"</value>
